    keymap {
        compatible = "zmk,keymap";

        default_layer { //layer 0
            display-name = "Base";
// ----------------------------------------------
// |     A     |     B     |     C     |     D     |
// |     E     |     F     |     G     |     H     |
            bindings = <
                &lt 1 TOOL8    &TOOL6    &TOOL4    &TOOL2 
                &TOOL7    &TOOL5    &TOOL3    &TOOL1
            >;
        };

        bt_layer { //layer 1
            display-name = "BT";
            bindings = <
                &none    &bt BT_SEL 0    &none    &none
                &bt BT_CLR    &none    &none    &none
            >;
        };
    };
 };